APP_NAME=GeologAI WebOS
APP_VERSION=1.0.0
DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/geologai
DB_POOL_SIZE=20
DB_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL=redis://localhost:6379
